<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConvApp.Views.FeedPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="피드"
                   HorizontalTextAlignment="Center" 
                   HorizontalOptions="Fill" 
                   BackgroundColor="DimGray" 
                   Padding="0,10,0,10"
                   FontSize="30"
                   TextColor="White"/>
            <ListView x:Name="list" VerticalOptions="CenterAndExpand" SelectionMode="None" ItemTapped="OnItemSelect">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding Image}" Text="{Binding TextContent}" Detail="{Binding Date}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="포스트 추가" Clicked="OnPostAdd"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>