<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConvApp.Views.SearchPage"
             Shell.NavBarIsVisible="False">
    <!--x:customeditor="ConvApp."-->
    <ContentPage.ToolbarItems>
        <ToolbarItem/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <!--<Button  Text="뒤로" WidthRequest="30" Padding="0" Clicked="OnClicked_back"/>-->
            <SearchBar x:Name="searchBar" Placeholder="Search items..."
                    TextTransform="Lowercase"
                    FontSize="Medium"
                    HorizontalOptions="FillAndExpand"
                    TextChanged="OnClick_search"/>
        </StackLayout>
        <!--<Editor TextChanged="aaaaa" />-->

        <ListView x:Name="searchResults" 
                    HorizontalOptions="Fill"
                    VerticalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>